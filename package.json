{
  "name": "zod-sqlite",
  "version": "1.0.1",
  "description": "Generate type-safe SQLite table schemas from Zod validation schemas.",
  "private": false,
  "author": {
    "name": "Favour Emeka",
    "email": "favor.emeka@minibase.com",
    "url": "https://github.com/favorodera"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favorodera/zod-sqlite.git"
  },
  "bugs": {
    "url": "https://github.com/favorodera/zod-sqlite/issues"
  },
  "homepage": "https://github.com/favorodera/zod-sqlite#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm clean && tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build && pnpm typecheck && pnpm vitest --watch=false",
    "ci:release": "pnpm build && pnpm dlx @changesets/cli publish",
    "ci:version": "pnpm dlx @changesets/cli version && pnpm install --no-frozen-lockfile"
  },
  "packageManager": "pnpm@10.26.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/ui": "^4.0.16",
    "db0": "^0.3.4",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24.4.0"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "keywords": [
    "zod",
    "sqlite",
    "database",
    "schema",
    "validation",
    "zod-to-sqlite"
  ]
}
